<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Readie.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Text="READIE"
               Grid.Row="0"
               FontSize="40"
               FontFamily="PTMonoRegular"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

        <Image Source="icon.png"
               Grid.Row="0"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="0,160,0,0"/>

        <Button Text="OKU"
                Grid.Row="1"
                FontSize="20"
                FontFamily="PTMonoRegular"
                WidthRequest="200"
                HeightRequest="40"
                VerticalOptions="Center"
                Margin="0,0,0,120"/>

        <Button Text="BIZE ULASIN"
                Grid.Row="1"
                FontSize="20"
                FontFamily="PTMonoRegular"
                WidthRequest="200"
                HeightRequest="40"
                VerticalOptions="Center"/>
    </Grid>

</ContentPage>
