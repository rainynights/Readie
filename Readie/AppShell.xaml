<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Readie.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Readie"
       Shell.FlyoutBehavior="Disabled"
       x:DataType="local:AppShell">

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage" />

    <Shell.TitleView>
        <StackLayout Background="{AppThemeBinding Light={StaticResource LightSecondary}, Dark={StaticResource DarkSecondary}}">
            <ImageButton Command="{Binding ChangeThemeCommand}"
                         Source="{Binding ThemeIcon}"
                         WidthRequest="48"
                         HeightRequest="48"
                         HorizontalOptions="Start"
                         BackgroundColor="Transparent"
                         BorderColor="Transparent">

            </ImageButton>

        </StackLayout>
    </Shell.TitleView>

</Shell>
